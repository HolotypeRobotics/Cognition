// Defines a list of actions using htm.core encoding types

{
    "actions": [
      {
        "name": "action_name_1",
        "type": "movement",
        "attributes": {
          "direction": {
            "type": "enum",
            "values": ["forward", "backward"]
          },
          "speed": {
            "type": "scalar",
            "minValue": 0,
            "maxValue": 1.0
          }
        }
      },
      {
        "name": "action_name_2",
        "type": "manipulation",
        "attributes": {
          "operation": {
            "type": "enum",
            "values": ["grasping", "lifting"]
          },
          "force": {
            "type": "scalar",
            "minValue": 10,
            "maxValue": 50
          },
          "object_size": {
            "type": "vector",
            "minValues": {"x": 0, "y": 0},
            "maxValues": {"x": 10, "y": 10}
          }
        }
      },
      {
        "name": "action_name_3",
        "type": "perception",
        "attributes": {
          "sensing_range": {
            "type": "scalar",
            "minValue": 0,
            "maxValue": 100
          },
          "data_rate": {
            "type": "scalar",
            "minValue": 1,
            "maxValue": 10
          }
        }
      },
      {
        "name": "action_name_4",
        "type": "communication",
        "attributes": {
          "protocol": {
            "type": "enum",
            "values": ["modbus", "can", "ethernet/ip"]
          },
          "data_rate": {
            "type": "scalar",
            "minValue": 0,
            "maxValue": 1000
          }
        }
      },
      {
        "name": "action_name_5",
        "type": "environmental",
        "attributes": {
          "terrain_type": {
            "type": "enum",
            "values": ["flat", "uneven"]
          },
          "adaptation_strategy": {
            "type": "enum",
            "values": ["wheel_speed_adjustment", "leg_reconfiguration"]
          }
        }
      }
    ]
  }
  